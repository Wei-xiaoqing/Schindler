.hdCon {
  display: flex;
  justify-content: space-between;
}

.hdCon navigator {
  height: 50rpx;
}

.hdCon image {
  height: 100%;
}

.map {
  position: relative;
  padding: 0;
}

.map .city {
  width: 100%;
  position: relative;
  bottom: 15rpx;
}

.banner {
  width: 100%;
  height: 300rpx;
}

.banner swiper {
  height: 100%;
  width: 100%;
}

.banner image {
  width: 100%;
  height: 300rpx;
}

.major {
  white-space: nowrap;
}

.major .box {
  text-align: center;
  width: 150rpx;
  display: inline-block;
}

.major .pic {
  width: 120rpx;
  height: 120rpx;
}

.pubtitle {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  align-items: center;
  margin-bottom: 40rpx;
}

.pubtitle .txt {
  font-size: 40rpx;
  height: 100%;
  position: relative;
  padding-left: 20rpx;
}

.pubtitle .txt::before {
  display: block;
  width: 8rpx;
  height: 34rpx;
  background: #d80b07;
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -15rpx;
}

.pubtitle .more {
  font-size: 34rpx;
  color: #666;
}

/* 近期活动模块 */
.works {
  background: #f0f3f8;
  padding: 90rpx 0 70rpx;
}

.wkMain {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.wkMain .box {
  width: 344rpx;
  height: 214rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.wkMain .ceng {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 0;
  left: 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.wkMain .pic {
  width: 100%;
  height: 100%;
}

.wkMain .ceng .title {
  font-size: 34rpx;
}

.wkMain .ceng .price {
  opacity: 0.6;
  text-transform: uppercase;
}

.wkMain .ceng .line {
  width: 50rpx;
  height: 2rpx;
  background: #fff;
  margin: 10rpx 0 20rpx;
}

.dynamic {
  padding: 90rpx 0 70rpx;
}

.dyItem {
  display: flex;
  padding: 15rpx 0;
  border: 1px dashed #f4f4f4;
  justify-content: space-between;
}

.dyItem .pic {
  width: 230rpx;
  height: 150rpx;
}

.dyItem .pic image {
  width: 100%;
  height: 100%;
}

.dyItem .txt {
  width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dyItem .title {
  font-size: 34rpx;
}

.dyItem .info {
  font-size: 26rpx;
  color: #888;
}

.dyItem .info text {
  font-size: 22rpx;
}

.footer {
  padding: 30rpx 0;
  background: #f2f2f2;
  text-align: center;
}

.footer .pic {
  width: 180rpx;
}

.footer .text {
  font-size: 25rpx;
  color: #666;
}